

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  passwordHash   String
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  documents      Document[] // Relation to documents created by the user
  collaborations Collaboration[] // Relation to collaborations
}

model Document {
  id             Int              @id @default(autoincrement())
  title          String
  content        String           @db.Text // Storing large text content
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  ownerId        Int
  owner          User             @relation(fields: [ownerId], references: [id])
  versions       VersionHistory[] // Relation to version history
  collaborations Collaboration[] // Relation to collaborations
}

model Collaboration {
  id         Int               @id @default(autoincrement())
  userId     Int
  documentId Int
  role       CollaborationRole
  user       User              @relation(fields: [userId], references: [id])
  document   Document          @relation(fields: [documentId], references: [id])
  createdAt  DateTime          @default(now())
}

model VersionHistory {
  id         Int      @id @default(autoincrement())
  documentId Int
  content    String   @db.Text
  version    Int
  createdAt  DateTime @default(now())
  document   Document @relation(fields: [documentId], references: [id])
}

enum CollaborationRole {
  OWNER
  EDITOR
  VIEWER
}
